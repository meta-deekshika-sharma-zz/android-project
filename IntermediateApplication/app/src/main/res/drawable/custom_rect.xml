<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:width="200dp"
        android:height="200dp"
        android:gravity="fill">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <stroke
                android:width="10dp"
                android:color="#dedbdb" />
        </shape>
        <color android:color="#465866" />
    </item>

    <item
        android:width="50dp"
        android:height="50dp"
        android:left="200dp"
        android:top="200dp">
        <bitmap
            android:gravity="fill"
            android:src="@drawable/pencil"></bitmap>
    </item>
</layer-list>