<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user15.helloworldapplication">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cat"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.StandardLaunchActivity"
            android:launchMode="standard"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.SingleTopActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.SingleTaskActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".activities.MainActivity"/>
        <activity
            android:name=".activities.SingleInstanceActivity"
            android:launchMode="singleInstance"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.IntentActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.FragmentActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.FormActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.RecyclerViewActivity"
            android:parentActivityName=".activities.MainActivity"/>
        <activity android:name=".activities.WeatherActivity"
            android:parentActivityName=".activities.MainActivity"></activity>
    </application>

</manifest>